{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "webpack": true,
    "deleteOutDir": true
  },
  "monorepo": true,
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "zentium-api-user": {
      "type": "application",
      "root": "apps/zentium-api-user",
      "entryFile": "main",
      "sourceRoot": "apps/zentium-api-user/src",
      "compilerOptions": {
        "tsConfigPath": "apps/zentium-api-user/tsconfig.app.json"
      }
    }
  }
}